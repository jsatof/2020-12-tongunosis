    <TextView
        android:id="@+id/intro1"
        android:layout_width="270dp"
        android:layout_height="220dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="fill_horizontal"
        android:padding="10dp"
        android:text="Welcome to Tongunosis! This application was developed to offer accessibility to Traditional Chinese Medicine and its practice of tongue diagnosis. We've developed a machine learning algorithm to analyze your tongue and return suspected problems based off of hundreds of tongue images."
        android:textAllCaps="true"
        android:textColor="#ebebeb"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.194" />

    <TextView
        android:id="@+id/intro2"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:padding="10dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="end"
        android:text="In order to begin your analysis, simply tap the button below and grant the application access to your camera."
        android:textAllCaps="true"
        android:textColor="#FF8C00"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.720" />

    <Button
        android:id="@+id/button_begin"
        android:layout_width="265dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_border_solid"
        android:fontFamily="@font/montserrat_light"
        android:text="Tap to Begin"
        android:textColor="#ebebeb"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.810" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo_final5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

